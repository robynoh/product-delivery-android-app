<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rider.troopadelivery.troopa.machine_info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="560dp"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profilebg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingTop="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">
              <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machine Information"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/textViewxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RIDER MOTOR BIKE"
                    android:textSize="15sp"
                    android:textColor="@color/white"



                    />


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:layout_gravity="center"


                          android:background="@drawable/ic_baseline_engineering_24"/>

                      <TextView
                          android:id="@+id/machine_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="TVS-09"
                          android:textSize="14sp"
                          android:padding="5dp"
                          android:textColor="@color/white"
                          android:layout_gravity="center"

                          />
                  </LinearLayout>

            </LinearLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:orientation="horizontal"
            android:background="@drawable/field_background"

            android:layout_margin="20dp">

            <LinearLayout
                android:id="@+id/firstList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical"
                android:paddingTop="8dp"
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/emailtextx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Machine Manufacturer" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/field_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >


                    <ImageView
                        android:id="@+id/emailiconx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_baseline_engineering_24_bl" />


                    <EditText
                        android:id="@+id/machineManufacturer"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg"
                        android:ems="10"
                        android:hint="name here"
                        android:inputType="textPersonName"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/licensetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Licence Plate" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/field_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >


                    <ImageView
                        android:id="@+id/plateicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_baseline_straighten_24" />


                    <EditText
                        android:id="@+id/licensePlate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg"
                        android:ems="10"
                        android:hint="Engize here"
                        android:inputType="textPersonName"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/emailtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Engine Size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/field_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >


                    <ImageView
                        android:id="@+id/emailicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_baseline_bike_scooter_24" />


                    <EditText
                        android:id="@+id/engineSize"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg"
                        android:ems="10"
                        android:hint="Engize here"
                        android:inputType="textPersonName"
                        android:layout_gravity="center"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/bikecolortext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bike Color" />


                </LinearLayout>
                <TextView
                    android:id="@+id/colorsms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/orange"
                    android:textSize="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >



                    <Button
                        android:id="@+id/default_color"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:drawableLeft="@drawable/ic_baseline_refresh_24_white"
                        android:text=""
                        android:layout_marginRight="5dp"
                        />

                    <View
                        android:id="@+id/preview_selected_color"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:background="@drawable/small_btn"
                        />

                    <Button
                        android:id="@+id/change_color"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="choose"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/phone_texts2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="16sp" />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:gravity="center"

                    >
                    <Button
                        android:id="@+id/submitfirstlist"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:background="@drawable/round_button"
                        android:text="Update"
                        android:textAllCaps="false" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/idLoadingPB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>






        </LinearLayout>





    </LinearLayout>




</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>