<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rider.troopadelivery.troopa.login_now_activity">

    <ImageView
        android:id="@+id/troopa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_description"
        android:paddingTop="40dp"
        android:padding="40dp"
        app:srcCompat="@drawable/troppa_logo"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:id="@+id/firstList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/sucimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_description"


                app:srcCompat="@drawable/troopa_succxx"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


        <TextView
            android:id="@+id/regcomp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registration Complete"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Welcome to Troopa"
            android:textSize="30dp"
            android:textStyle="bold"
            app:fontFamily="@font/montserrat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"

            >

            <Button
                android:id="@+id/open_first_map"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/round_button"
                android:text="Continue"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>