<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pickup_location_bg"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="30dp"
            >
            <LinearLayout
                android:id="@+id/declinebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/red_round_button"
                android:gravity="center">

                <ImageView
                    android:id="@+id/banknametext"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:background="@drawable/ic_baseline_clear_24"
                    />

                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Decline"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"

            tools:ignore="MissingConstraints">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
<!--                <de.hdodenhof.circleimageview.CircleImageView-->
<!--                    android:id="@+id/newclientimg"-->
<!--                    android:layout_width="50sp"-->
<!--                    android:layout_height="50sp"-->
<!--                    android:src="@drawable/photo_avater"-->
<!--                    />-->

                />
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    >

                    <TextView
                        android:id="@+id/newclientname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Goodluck Seiyefa"
                        android:textSize="14sp"
                        android:textStyle="bold" />





                </LinearLayout>
                <LinearLayout
                    android:id="@+id/profilefilterx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/paytype_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment type"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"



                        />

                    <TextView
                        android:id="@+id/paymode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Card"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"

                        android:fontFamily="@font/montserrat"



                        />

                    <TextView
                        android:id="@+id/payment_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pick up location"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat"



                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profilefilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:gravity="right">



                    <ImageView
                        android:id="@+id/paymodeimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"

                        android:background="@drawable/cardpay2"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:background="@drawable/paytype_background">
                        <ImageView
                            android:id="@+id/locaiconx"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/ic_baseline_location_on_24_orange"
                            />
                        <TextView
                            android:id="@+id/paytype_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup Location"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange"
                            android:fontFamily="@font/montserrat"



                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/clientpickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Victoria Island"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:fontFamily="@font/montserrat"



                        />

                </LinearLayout><LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/paytype_background">
                    <ImageView
                        android:id="@+id/locaicon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/ic_baseline_access_time_24"
                        />
                    <TextView
                        android:id="@+id/paytypetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration - Distance"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/montserrat"



                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/durationdistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30min - 240KM"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat"



                    />

            </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:background="@drawable/paytype_background">
                        <ImageView
                            android:id="@+id/locaicon2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/ic_baseline_add_location_alt_24"
                            />
                        <TextView
                            android:id="@+id/paytypetext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dropoff Location"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange"
                            android:fontFamily="@font/montserrat"



                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/clientdropoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banana Island"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:fontFamily="@font/montserrat"



                        />

                </LinearLayout><LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/paytype_background">
                    <ImageView
                        android:id="@+id/locaicon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/ic_baseline_card_giftcard_24"
                        />
                    <TextView
                        android:id="@+id/paytype_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Package Type"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/montserrat"



                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/packagetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginLeft="10dp"



                    />

            </LinearLayout>

            </LinearLayout>



            <Button
                android:id="@+id/movetoorder"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_button"
                android:text="Accept Order"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="center"/>



        </LinearLayout>




    </LinearLayout>





</LinearLayout>