<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/breifstat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"

        android:background="@drawable/decline_head_bg">

        >

        <LinearLayout
            android:id="@+id/decimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:gravity="center">

            <ImageView
                android:id="@+id/emailiconx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/ic_baseline_shield_24"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/textimg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Reason of declining"
                android:textSize="14sp"
                android:paddingLeft="10dp"

                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>


    <RadioGroup

        android:id="@+id/groupradiox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"


        >

        <RadioButton
            android:id="@+id/fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text=" I am out of fuel"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/far"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am far from the pickup location"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/gobreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am going for break"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/motobreakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My motorcycle break down"
            android:layout_marginTop="5dp"
            android:textSize="14sp" />

    </RadioGroup>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="30dp">
    <TextView
        android:id="@+id/checkBoxxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="10dp"
        android:text="Are you declining all request from this client?"
        android:textSize="14sp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <RadioGroup

            android:id="@+id/groupradio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yescheckbox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Yes"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/nocheckbox"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/declineredbtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/red_round_button"
        android:text="submit"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="14dp"


        android:layout_gravity="left"/>

</LinearLayout>