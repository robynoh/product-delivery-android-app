<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/decline_list_board"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >
                <LinearLayout
                    android:id="@+id/card_payment_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="40dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:orientation="vertical"-->
                    <!--                        android:background="@drawable/card_pay">-->

                    <!--                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/clientname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Adewale Akerele Odogwu"
                            android:textSize="14sp"

                            android:fontFamily="@font/montserrat_bold"

                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/pickup_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Agudama epie, 123, Yenagoa"
                            android:textSize="10sp"

                            android:fontFamily="@font/montserrat"


                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/order_serial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Bayelsa QH-098GH"
                            android:textSize="12sp"

                            android:fontFamily="@font/montserrat"

                            android:textColor="@color/black"
                            />


                        <TextView
                            android:id="@+id/request_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="Cancelled"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"

                            android:fontFamily="@font/montserrat_bold"

                            android:textColor="@color/red"
                            />

                        <TextView
                            android:id="@+id/request_timex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Cancelled"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"

                            android:fontFamily="@font/montserrat_bold"

                            android:textColor="@color/red"
                            />



                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

