<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="10dp"
            android:background="@drawable/order_header">
<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:id="@+id/userimg"-->
<!--                android:layout_width="40sp"-->
<!--                android:layout_height="40sp"-->
<!--                android:src="@drawable/photo_avater"-->
<!--                android:paddingLeft="30dp"-->
<!--                />-->


            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/clientname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Goodluck Seiyefa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="15dp"
                    android:textColor="@color/white"/>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/profilefilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                >

                <LinearLayout
                    android:id="@+id/view_location_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/client_contact">
                    <ImageView
                        android:id="@+id/locaicon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:background="@drawable/ic_baseline_map_24"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tripcall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/client_contact">

                    <ImageView
                        android:id="@+id/locaicon2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:background="@drawable/ic_baseline_phone_24_white"
                        />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:background="@drawable/order_body_head">
                    <ImageView
                        android:id="@+id/locaicon3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/ic_baseline_location_on_24_black"
                        />
                    <TextView
                        android:id="@+id/paytype_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Location"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat"



                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/pickupvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Victoria Island"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:fontFamily="@font/montserrat"



                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"

                    android:background="@drawable/order_body_head">
                    <ImageView
                        android:id="@+id/locaicon4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/ic_baseline_access_time_24_black"
                        />
                    <TextView
                        android:id="@+id/paytype_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration - Distance"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat"



                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/durationvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30min - 240KM"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat"



                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:background="@drawable/order_list_footer">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:background="@drawable/order_body_head">
                    <ImageView
                        android:id="@+id/locaiconx"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/ic_baseline_add_location_alt_24_black"
                        />
                    <TextView
                        android:id="@+id/paytypetext2f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dropoff Location"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat"



                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/dropoffvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banana Island"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:fontFamily="@font/montserrat"



                    />

            </LinearLayout><LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"

                android:background="@drawable/order_body_head">
                <ImageView
                    android:id="@+id/locaicon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/ic_baseline_card_giftcard_24_black"
                    />
                <TextView
                    android:id="@+id/paytype_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package Type"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"



                    />

            </LinearLayout>


            <TextView
                android:id="@+id/packagevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="12sp"
                android:padding="5dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="10dp"



                />

        </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:background="@drawable/order_list_footer">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:background="@drawable/order_body_head2">

                    <TextView
                        android:id="@+id/deliverstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Declined"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_bold"



                        />

                </LinearLayout>




            </LinearLayout><LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"

                android:background="@drawable/order_body_head2">

                <TextView
                    android:id="@+id/ordertime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 mins Ago"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"



                    />

            </LinearLayout>




        </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>